<body>

  <h2>스타벅스 메뉴 계산기</h2>

  <div class="menu-item">
    <label for="아이스아메리카노">아이스아메리카노 (4,500원)</label>
    <input type="number" id="아이스아메리카노" value="0" min="0">
  </div>

  <div class="menu-item">
    <label for="카푸치노">카푸치노 (5,000원)</label>
    <input type="number" id="카푸치노" value="0" min="0">
  </div>

  <div class="menu-item">
    <label for="에스프레소">에스프레소 (4,100원)</label>
    <input type="number" id="에스프레소" value="0" min="0">
  </div>

  <div class="menu-item">
    <label for="카페라테">카페라테 (5,300원)</label>
    <input type="number" id="카페라테" value="0" min="0">
  </div>

  <button onclick="calculateTotal()">총 계산하기</button>

  <div id="result"></div>

  <script>
    const prices = {
      "아이스아메리카노": 4500,
      "카푸치노": 5000,
      "에스프레소": 4100,
      "카페라테": 5300
    };

    function calculateTotal() {
      let total = 0;
      let summary = [];

      for (let menu in prices) {
        const qty = parseInt(document.getElementById(menu).value) || 0;
        if (qty > 0) {
          const subtotal = prices[menu] * qty;
          total += subtotal;
          summary.push(`${menu} ${qty}잔`);
        }
      }

      const resultDiv = document.getElementById('result');
      if (summary.length === 0) {
        resultDiv.innerText = "하나 이상의 음료 수량을 입력해주세요.";
      } else {
        resultDiv.innerText = `선택한 음료:\n${summary.join(', ')}\n총 합계: ${total.toLocaleString()}원`;
      }
    }
  </script>

</body>
</html>
